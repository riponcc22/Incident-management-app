<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>

<!-- Content for the Add Page-->

<div class="container">
  <div class="row">
    <div class="offset-md-1 col-md-6"></div>
    <h1><%= title %></h1>
    <style>
      body {
        background-image: url('Assets/images/incidentmgt.jpg');
        background-size: cover;
      }
    </style>


    <form class="form" method="POST">
      <div class="form-group">
        <label for="nameTextField">Incident</label>
        <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Incident name" name="incident" value="<%= user.incident %>" required>
      </div>

      <div class="form-group">
        <label for="emailaddressTextArea">Description of Incident</label>
        <textarea type="text" class="form-control" id="emailaddressTextArea" placeholder="Enter Description of Incident" name="description" required><%= user.description %></textarea>
      </div>
      <div class="form-group">
        <label for="contactTextField">Date of Incident</label>
        <input type="datetime-local" class="form-control" id="contactTextField" placeholder="Enter the Incident Description" name="date" value="<%= user.date %>" required>
      </div>



      <button class="btn btn-primary" type="submit">
        <i class="fas fa-edit"></i> Submit</button>
      <a href="/data" class="btn btn-warning">
        <i class="fas fa-undo"></i> Cancel</a>

    </form>
  </div>
</div>

<%- include partials/bottom_nav.ejs %>

<%- include partials/footer.ejs %>